/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    // add1 = HalfAdder(a, b);
    HalfAdder(a=a, b=b, sum=add1sum, carry=add1carry);
    // out = HalfAdder(add1, c);
    HalfAdder(a=add1sum, b=c, sum=sum, carry=add2carry);
    // calc carry bit
    Or(a=add1carry, b=add2carry, out=carry);
}