/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // not sel
    Nand(a=sel, b=sel, out=notsel);
    // And(a, notsel)
    Nand(a=a, b=notsel, out=tempa);
    Nand(a=tempa, b=tempa, out=anda);

    // And(b, sel)
    Nand(a=b, b=sel, out=tempb);
    Nand(a=tempb, b=tempb, out=andb);

    // Or(anda, andb)
    Nand(a=anda, b=andb, out=nota);
    Nand(a=nota, b=andb, out=x);
    Nand(a=andb, b=andb, out=notb);
    Nand(a=anda, b=notb, out=y);
    Nand(a=x, b=y, out=xor);
    Nand(a=xor, b=xor, out=notxor);
    Nand(a=anda, b=andb, out=nand);
    Nand(a=notxor, b=nand, out=out);
}